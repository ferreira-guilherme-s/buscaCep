<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="100dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="361dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/cep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Cep:"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="178dp" />
        <TextView
            android:id="@+id/logradouro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Logradouro:"
            app:layout_constraintTop_toBottomOf="@+id/cep"
            />
        <TextView
            android:id="@+id/cidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Cidade:"
            app:layout_constraintTop_toBottomOf="@+id/logradouro"/>
        <TextView
            android:id="@+id/estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Estado:"
            app:layout_constraintTop_toBottomOf="@+id/cidade"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="178dp" />
        <TextView
            android:id="@+id/pais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="País:"
            app:layout_constraintTop_toBottomOf="@+id/estado"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="178dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/bar"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/min"
            android:layout_width="90dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:text="Mín"
            app:layout_constraintRight_toLeftOf="@+id/max"
            app:layout_constraintTop_toBottomOf="@+id/bar"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="178dp" />

        <TextView
            android:id="@+id/max"
            android:layout_width="90dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:text="Max"
            app:layout_constraintRight_toLeftOf="@+id/rain"
            app:layout_constraintTop_toBottomOf="@+id/bar"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="178dp" />

        <TextView
            android:id="@+id/rain"
            android:layout_width="90dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:text="Precipitação"
            app:layout_constraintTop_toBottomOf="@+id/bar"
            app:layout_constraintLeft_toRightOf="@+id/max"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="178dp" />

    </LinearLayout>




</LinearLayout>
